<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oldwang.ssm.mybaties.dao.UserDao" >
    <!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="UserResultMap" type="com.oldwang.ssm.mybaties.entity.User">
        <id column="ID" property="id" jdbcType="INTEGER"></id>
        <result column="USERNAME" property="username" jdbcType="VARCHAR"></result>
        <result column="SAL" property="sal" jdbcType="DECIMAL"></result>
        <result column="BIRTHDAY" property="birthday" jdbcType="DATE"></result>
    </resultMap>
    <!--sql片段,该片段使用频率较高时-->
    <sql id="AllUserColumns">
        id,username,sal,birthday
    </sql>
    <select id="findById" parameterType="integer" resultMap="UserResultMap">
        select
            <include refid="AllUserColumns"/>
        from userinfo
        where id=#{userId}
    </select>
    <select id="findAll" resultMap="UserResultMap">
        select <include refid="AllUserColumns"/> from userinfo
    </select>
    <select id="findByPage" parameterType="map" resultMap="UserResultMap">
        select <include refid="AllUserColumns"/> from userinfo limit=#{start},#{size}
    </select>
    <select id="findByName" parameterType="map" resultMap="UserResultMap">
        select
            <include refid="AllUserColumns"/>
        from userinfo
        where username like concat('%',#{username},'%')
    </select>
    <!--mybatis中#{value}执行的是preparedStatement是预编译的，效率较高,且防止了sql注入；
    $代表sql语句的拼接（传递表名或字段名时必须使用），无法防止 例like ‘%${username}%’-->

    <insert id="save" parameterType="com.oldwang.ssm.mybaties.entity.User"
            useGeneratedKeys="true" keyProperty="id">
        insert into userinfo(username,sal,birthday) value(#{username},#{sal},#{birthday})
    </insert>
    <update id="update" parameterType="com.oldwang.ssm.mybaties.entity.User">
        update userinfo set username=#{username},sal=#{sal},birthday=#{birthday} where id=#{id}
    </update>
    <delete id="delete" parameterType="com.oldwang.ssm.mybaties.entity.User">
        delete from userinfo where id=#{userId}
    </delete>
</mapper>